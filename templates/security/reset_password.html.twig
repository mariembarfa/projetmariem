{% extends 'newLayout.html.twig' %}
  {% block style %}

      {#      <link href="dist/css/pages/login-register-lock.css" rel="stylesheet">#}

      <link href="{{ asset('dist/css/pages/login-register-lock.css')}}" rel="stylesheet">



  {% endblock %}

{% block body %}
    <section id="wrapper">
        <div class="login-register" style="background-image:url(../assets/images/background/login-register.jpg);">
            <div class="login-box card">
                <div class="card-body">

                    <form method="post">

                    <h3 class="box-title m-b-20">Reset Password</h3>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="col-xs-12">
                                            <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Mot de passe" required>
                                            <input type="hidden" name="token" value="{{ token }}">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group text-center p-b-10">
                        <div class="col-xs-12">
                            <button  class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" id="valider">   Valider le mot de passe  </button>


                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </section>



{% endblock %}




{% block custom_script %}

    <script type="text/javascript">
        $(function() {
            $(".preloader").fadeOut();
        });

    </script>

{% endblock %}




