                        <span class="u-meta-comments u-meta-icon"><!--blog_post_metadata_comments_content-->{{ evenement.localisation }}<!--/blog_post_metadata_comments_content--></span><!--/blog_post_metadata_comments-->
                        <span class="u-meta-comments u-meta-icon"><!--blog_post_metadata_comments_content-->{{ evenement.prix }}DT<!--/blog_post_metadata_comments_content--></span><!--/blog_post_metadata_comments-->
                    </div><!--/blog_post_metadata--><!--blog_post_content-->
                    <div class="u-align-left-lg u-align-left-md u-align-left-sm u-align-left-xl u-blog-control u-post-content u-text u-text-2"><!--blog_post_content_content-->{{ evenement.description }}<!--/blog_post_content_content--></div><!--/blog_post_content--><!--blog_post_readmore-->
                    <div class="u-align-left-lg u-align-left-md u-align-left-sm u-align-left-xl u-blog-control u-post-content u-text u-text-2"><!--blog_post_content_content-->{{ evenement.nombrePlace }}<!--/blog_post_content_content--></div><!--/blog_post_content--><!--blog_post_readmore-->

                    <a href="{{ path('evenements_show')}}?id={{ evenement.id }}&nb=1" class="u-blog-control u-btn u-button-style u-btn-1"><!--blog_post_readmore_content-->reserver<!--/blog_post_readmore_content--></a><!--/blog_post_readmore-->
                </div>
            </div>
        {% endfor %}
                        </div> </div> </div>


</section>


